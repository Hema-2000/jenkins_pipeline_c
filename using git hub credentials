pipeline {
    agent any 
    environment {
        course = "Devops mastery"
        name = "Siva" 
    }
    stages {
        stage('Build') {
            environment {
                GITHUB_CREDS = credentials('github_siva_credentials') //git hub id
            }
            steps {
                echo "Github Credentials arr ${GITHUB_CREDS}"
                echo "UserId is: ${GITHUB_CREDS_USR}"  //error in this code there is no variables like usr and pwd
                echo "password is: ${GITHUB_CREDS_PSW}"
            }
        }
    }
}

///to coorect this code
/*Just ensure that the credential ID 'github_siva_credentials' exists in your Jenkins credentials store,
and it contains the necessary GitHub username and password information. 
If you haven't already created this credential, 
you should do so in the Jenkins UI before running the pipeline.  */

pipeline {
    agent any 
    environment {
        course = "Devops mastery"
        name = "Siva" 
    }
    stages {
        stage('Build') {
            environment {
                GITHUB_CREDS = credentials('github_siva_credentials') //id
            }
            steps {
                script {
                    // Extracting username and password from GitHub credentials
                    def credentials = credentials('github_siva_credentials')
                    def username = credentials.username
                    def password = credentials.password

                    echo "Github Credentials are ${GITHUB_CREDS}"
                    echo "Username is: ${username}"
                    echo "Password is: ${password}"
                }
            }
        }
    }
}
