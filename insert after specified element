//1d int arr

#include <stdio.h>
#define N 20
int main() {
    int arr[N],i,j;
    int size,ins,ele;
    printf("enter the size of an array");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter the element in an array ");
    scanf("%d",&ele);
    printf("element to insert before the specified element");
    scanf("%d",&ins);
    for(i=0;i<size;i++)
    {
       if(arr[i]==ele)
       {
           for(j=size;j>i+1;j--)
           {
           arr[j]=arr[j-1];
           }
       arr[i+1]=ins;
       size++;
       break;
       }
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%d ",arr[i]);
    }
        return 0;
}


//1d float arr
#include <stdio.h>
#define N 20
int main() {
    float arr[N],ins,ele;
    int size,i,j;
    printf("enter the size of an array");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%f",&arr[i]);
    }
    printf("enter the element in an array ");
    scanf("%f",&ele);
    printf("element to insert before the specified element");
    scanf("%f",&ins);
    for(i=0;i<size;i++)
    {
       if(arr[i]==ele)
       {
           for(j=size;j>i+1;j--)
           {
           arr[j]=arr[j-1];
           }
       arr[i+1]=ins;
       size++;
       break;
       }
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%f ",arr[i]);
    }
        return 0;
}


//1d char arr

 #include <stdio.h>
#define N 20
int main() {
    char arr[N],ins,ele;
    int size,i,j;
    printf("enter the size of an array");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",&arr[i]);
    }
    printf("enter the element in an array\n");
    scanf(" %c",&ele);
    printf("element to insert before the specified element\n");
    scanf(" %c",&ins);
    for(i=0;i<size;i++)
    {
       if(arr[i]==ele)
       {
           for(j=size;j>i+1;j--)
           {
           arr[j]=arr[j-1];
           }
       arr[i+1]=ins;
       size++;
       break;
       }
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%c ",arr[i]);
    }
        return 0;
}

//1d arr usimg pointers

#include <stdio.h>
#define N 20
int main() {
    char arr[N],ele,ins;
    char *ptr=arr;
    int size,i,j;
    printf("enter the size of an array");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",ptr+i);
    }
     printf("enter the element in an array\n");
    scanf(" %c",&ele);
    printf("element to insert before the specified element\n");
    scanf(" %c",&ins);
   for(i=0;i<size;i++)
    {
       if(ptr[i]==ele)
       {
           for(j=size;j>i+1;j--)
           {
           ptr[j]=ptr[j-1];
           }
       ptr[i+1]=ins;
       size++;
       break;
       }
    }
    printf("elements in an array:\n");
    for(i=0;i<size+1;i++)
    {
    printf("%c ",*(ptr+i));
    }
}


//1d arr with memory allocations
#include <stdio.h>
#include <stdlib.h>
int main() {
   int size,i,j,ins,ele;
    printf("enter the size of an array:");
    scanf("%d",&size);
    int *arr=(int*)malloc(sizeof(int)*size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter the ins and ele:");
    scanf("%d %d",&ins,&ele);
    for(i=0;i<size;i++)
    {
       if(arr[i]==ele)
       {
           for(j=size;j>i+1;j--)
           {
           arr[j]=arr[j-1];
           }
       arr[i+1]=ins;
       size++;
       break;
       }
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%d ",arr[i]);
    }
    free(arr);
        return 0;
}

