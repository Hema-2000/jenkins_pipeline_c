    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%f",ptr+i);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%.3f ",*(ptr+i));
    }
        return 0;
}

//creating 1d char array using pointers
                    
#include <stdio.h>
#define N 20
int main() {
    char arr[N];
    char *ptr=arr;
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",ptr+i);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%c ",*(ptr+i));
    }
        return 0;
}

                        
//creating 1d int array using dynamic memory allocations

#include <stdio.h>
#include <stdlib.h>
#define N 20
int main() {
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    int *arr=(int*)malloc(sizeof(int)*size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%d ",arr[i]);
    }
    free(arr);
        return 0;
}

//creating 1d float array using dynamic memory allocations   
#include <stdio.h>
#include <stdlib.h>
int main() {
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    float *arr=(float*)calloc(sizeof(float),size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%f",&arr[i]);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%.2f ",arr[i]);
    }
    // free(arr);
        return 0;
}

                                
//creating 1d char array using dynamic memory allocations  
#include <stdio.h>
#include <stdlib.h>
int main() {
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    char *arr=(char*)calloc(sizeof(char),size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",&arr[i]);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%c ",arr[i]);
    }
    int new_size;
    printf("\nenter the newsize of an array:");
    scanf("%d",&new_size);
    arr=(char*)realloc(arr,sizeof(char)*new_size);
    printf("\nenter the remaining array elements");
    for(i=0;i<new_size;i++)
    {
        scanf(" %c",&arr[i]);
    }
    printf("elements in an array:");
    for(i=0;i<new_size;i++)
    {
    printf("%c ",arr[i]);
    }
    free(arr);
        return 0;
}
                           
                        
