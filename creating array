//creating 1d int array 
#include <stdio.h>
#define N 20
int main() {
    int arr[N],i;
    int size;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%d ",arr[i]);
    }
        return 0;
}

//creating 1d float array
   
#include <stdio.h>
#define N 20
int main() {
    float arr[N];
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%f",&arr[i]);
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%.3f ",arr[i]);
    }
        return 0;
}

 //create 1d char array
        // Online C compiler to run C program online
#include <stdio.h>
#define N 20
int main() {
    char arr[N];
    int size,i;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",&arr[i]);
    }
    printf("elements in an array:\n");
    for(i=0;i<size;i++)
    {
    printf("%c ",arr[i]);
    }
        return 0;
}

 //creating 1d integer array using pointers
            
#include <stdio.h>
#define N 20
int main() {
    int arr[N],i;
    int *ptr=arr;
    int size;
    printf("enter the size of an array:");
    scanf("%d",&size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",ptr+i);
    }
    printf("elements in an array:");
    for(i=0;i<size;i++)
    {
    printf("%d ",*(ptr+i));
    }
        return 0;
}
                
//creating 1d float array using pointers

#include <stdio.h>
#define N 20
int main() {
    float arr[N];
