//int 1d arr
#include <stdio.h>
#define N 20
int main() {
    int arr[N],i,j;
    int size,pos,ele;
    printf("enter the size of an array and enter the pos to insert\n");
    scanf("%d %d",&size,&pos);
    printf("enter the element to insert");
    scanf("%d",&ele);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=size;i>=pos-1;i--)
    {
       arr[i]=arr[i-1];
    }
    arr[pos-1]=ele;
    printf("elements in an array:\n");
    for(i=0;i<size+1;i++)
    {
    printf("%d ",arr[i]);
    }
        return 0;
}

//float 1d arr

#include <stdio.h>
#define N 20
int main() {
    float arr[N],ele;
    int size,pos,i,j;
    printf("enter the size of an array and enter the pos to insert\n");
    scanf("%d %d",&size,&pos);
    printf("enter the element to insert");
    scanf("%f",&ele);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%f",&arr[i]);
    }
    for(i=size;i>=pos-1;i--)
    {
       arr[i]=arr[i-1];
    }
    arr[pos-1]=ele;
    printf("elements in an array:\n");
    for(i=0;i<size+1;i++)
    {
    printf("%.2f ",arr[i]);
    }
        return 0;
}

//char 1d arr
#include <stdio.h>
#define N 20
int main() {
    char arr[N],ele;
    int size,pos,i,j;
    printf("enter the size of an array and enter the pos to insert\n");
    scanf("%d %d",&size,&pos);
    printf("enter the element to insert");
    scanf(" %c",&ele);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",&arr[i]);
    }
    for(i=size;i>=pos-1;i--)
    {
       arr[i]=arr[i-1];
    }
    arr[pos-1]=ele;
    printf("elements in an array:\n");
    for(i=0;i<size+1;i++)
    {
    printf("%c ",arr[i]);
    }
        return 0;
}


//using pointers
#include <stdio.h>
#define N 20
int main() {
    char arr[N],ele;
    char *ptr=arr;
    int size,pos,i,j;
    printf("enter the size of an array and enter the pos to insert\n");
    scanf("%d %d",&size,&pos);
    printf("enter the element to insert");
    scanf(" %c",&ele);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf(" %c",ptr+i);
    }
    for(i=size;i>=pos-1;i--)
    {
       ptr[i]=ptr[i-1];
    }
    ptr[pos-1]=ele;
    printf("elements in an array:\n");
    for(i=0;i<size+1;i++)
    {
    printf("%c ",*(ptr+i));
    }
        return 0;
}


//using memory allocations


#include <stdio.h>
#include <stdlib.h>
#define N 20
int main() {
    int size,i,pos,ele;
    printf("enter the size of an array:");
    scanf("%d",&size);
    int *arr=(int*)malloc(sizeof(int)*size);
    printf("enter the array elements");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter the pos and ele:");
    scanf("%d %d",&pos,&ele);
    for(i=size;i>=pos-1;i--)
    {
       arr[i]=arr[i-1];
    }
    arr[pos-1]=ele;
    printf("elements in an array:");
    for(i=0;i<size+1;i++)
    {
    printf("%d ",arr[i]);
    }
    free(arr);
        return 0;
}
